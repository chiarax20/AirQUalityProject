                    }

               script.
                    var cerca = function() {
                         if(regione=='Tutte'){
                              window.open( '/risultati'); 
                         }else {
                              window.open( '/risultati/'+regione )
                              console.log(regione);    
                         }         
                    }

               button.button(onclick='cerca()') Cerca
     

        


     
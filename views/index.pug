          div.formcerca
               select(name='regione' placeholder="regione" id="reg")
                    option(value='') 
                    option(value='Tutte') Tutte
                    option(value='Abruzzo') Abruzzo
                    option(value='Basilicata') Basilicata
                    option(value='Calabria') Calabria
